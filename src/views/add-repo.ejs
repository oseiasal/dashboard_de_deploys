<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-white">
                <ul class="nav nav-tabs card-header-tabs" id="repoTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="local-tab" data-bs-toggle="tab" data-bs-target="#local" type="button" role="tab">Import Local</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="clone-tab" data-bs-toggle="tab" data-bs-target="#clone" type="button" role="tab">Clone Remote</button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                
                <div class="tab-content" id="repoTabsContent">
                    <!-- Import Local Tab -->
                    <div class="tab-pane fade show active" id="local" role="tabpanel">
                        <form action="/add" method="POST">
                            <input type="hidden" name="method" value="local">
                            <div class="mb-3">
                                <label for="name" class="form-label">Project Name</label>
                                <input type="text" class="form-control" name="name" required placeholder="My Awesome Project">
                            </div>
                            <div class="mb-3">
                                <label for="path-local" class="form-label">Local Path</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="path-local" name="path" required placeholder="C:\Projects\my-project">
                                    <!-- Native File Picker trigger -->
                                    <label class="btn btn-outline-secondary" for="picker-local">
                                        <i class="fas fa-folder-open"></i> Browse
                                    </label>
                                    <input type="file" id="picker-local" webkitdirectory directory style="display: none;" onchange="handleFolderSelect(this, 'path-local')">
                                </div>
                                <div class="form-text">Select the folder containing .git</div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Import Repository</button>
                                <a href="/" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>

                    <!-- Clone Remote Tab -->
                    <div class="tab-pane fade" id="clone" role="tabpanel">
                        <form action="/add" method="POST">
                            <input type="hidden" name="method" value="clone">
                            <div class="mb-3">
                                <label class="form-label">Project Name</label>
                                <input type="text" class="form-control" name="name" required placeholder="New Project Name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Git Repository URL</label>
                                <input type="url" class="form-control" name="url" required placeholder="https://github.com/user/repo.git">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Destination Folder</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="path-clone" name="path" required placeholder="C:\Projects\new-folder">
                                    <!-- Native File Picker trigger -->
                                    <label class="btn btn-outline-secondary" for="picker-clone">
                                        <i class="fas fa-folder-open"></i> Browse
                                    </label>
                                    <input type="file" id="picker-clone" webkitdirectory directory style="display: none;" onchange="handleFolderSelect(this, 'path-clone')">
                                </div>
                                <div class="form-text">Select where the new folder will be created.</div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success"><i class="fas fa-download me-2"></i>Clone & Import</button>
                                <a href="/" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function handleFolderSelect(input, targetId) {
        if (input.files && input.files.length > 0) {
            // Attempt to get path (Standard browsers block absolute path)
            // This is just a helper. If it returns fakepath, user must edit.
            const file = input.files[0];
            const targetInput = document.getElementById(targetId);
            
            // Try to extract useful info (mostly works in older envs or electron)
            // In modern Chrome: file.path is undefined, input.value is C:\fakepath\]...
            
            // We can't get the absolute path securely in browser.
            // We prompt the user to paste it if we detect fakepath.
            if (input.value.includes('fakepath')) {
                alert("Browser security hides the full path (C:\\...). Please copy the address from the folder window and paste it here.");
                targetInput.focus();
            } else {
                 targetInput.value = input.value;
            }
        }
    }
</script>

<%- include('partials/footer') %>