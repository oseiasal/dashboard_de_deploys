<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><%= repo.name %></h2>
        <small class="text-muted"><%= repo.path %></small>
    </div>
    <div class="d-flex align-items-center gap-3">
        <!-- Branch Switcher -->
        <form action="/repo/<%= repo.id %>/checkout" method="POST" class="d-flex align-items-center">
            <div class="input-group input-group-sm">
                <span class="input-group-text"><i class="fas fa-code-branch"></i></span>
                <select name="branch" class="form-select" onchange="this.form.submit()">
                    <% branches.all.forEach(branch => { %>
                        <option value="<%= branch %>" <%= branch === branches.current ? 'selected' : '' %>><%= branch %></option>
                    <% })
                    %>
                </select>
            </div>
        </form>

        <a href="/" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
</div>

<!-- Feedback Messages -->
<script>
    const urlParams = new URLSearchParams(window.location.search);
    const msg = urlParams.get('message');
    const err = urlParams.get('error');
    if(msg) document.write(`<div class="alert alert-success">${msg}</div>`);
    if(err) document.write(`<div class="alert alert-danger">${err}</div>`);
</script>

<!-- Tabs Navigation -->
<ul class="nav nav-tabs mb-4" id="repoTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="workspace-tab" data-bs-toggle="tab" data-bs-target="#workspace" type="button" role="tab">
            <i class="fas fa-laptop-code me-2"></i>Workspace
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab">
            <i class="fas fa-history me-2"></i>Commits History
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tags-tab" data-bs-toggle="tab" data-bs-target="#tags" type="button" role="tab">
            <i class="fas fa-tags me-2"></i>Tags
        </button>
    </li>
</ul>

<div class="tab-content" id="repoTabsContent">
    
    <!-- TAB 1: WORKSPACE -->
    <div class="tab-pane fade show active" id="workspace" role="tabpanel">
        <div class="row">
            <div class="col-md-7">
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Changes <span class="badge bg-secondary"><%= status.files.length %></span></h5>
                        <span class="badge bg-info text-dark"><%= status.current %></span>
                    </div>
                    <div class="card-body">
                        <% if (status.files.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                                <p class="text-muted">Working directory is clean.</p>
                            </div>
                        <% } else { %>
                            <form action="/repo/<%= repo.id %>/commit" method="POST">
                                <div class="list-group mb-3" style="max-height: 400px; overflow-y: auto;">
                                    <% status.files.forEach(file => { %>
                                        <label class="list-group-item">
                                            <input class="form-check-input me-1" type="checkbox" name="files" value="<%= file.path %>" checked>
                                            <span class="badge bg-warning text-dark me-2"><%= file.working_dir %></span>
                                            <%= file.path %>
                                        </label>
                                    <% })
                                    %>
                                </div>
                                <div class="input-group">
                                    <input type="text" name="message" class="form-control" placeholder="Commit message" required>
                                    <button class="btn btn-success" type="submit">Commit Selected</button>
                                </div>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card mb-4 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sync Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-6">
                                <form action="/repo/<%= repo.id %>/pull" method="POST">
                                    <button class="btn btn-info w-100 text-white" type="submit">
                                        <i class="fas fa-cloud-download-alt me-2"></i> Pull
                                    </button>
                                </form>
                            </div>
                            <div class="col-6">
                                <form action="/repo/<%= repo.id %>/push" method="POST">
                                    <button class="btn btn-primary w-100" type="submit">
                                        <i class="fas fa-cloud-upload-alt me-2"></i> Push
                                    </button>
                                </form>
                            </div>
                            <div class="col-6">
                                <form action="/repo/<%= repo.id %>/pull-tags" method="POST">
                                    <button class="btn btn-outline-info w-100" type="submit">
                                        <i class="fas fa-tags me-2"></i> Pull Tags
                                    </button>
                                </form>
                            </div>
                            <div class="col-6">
                                <form action="/repo/<%= repo.id %>/push-tags" method="POST">
                                    <button class="btn btn-outline-primary w-100" type="submit">
                                        <i class="fas fa-tags me-2"></i> Push Tags
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Scheduler</h5>
                        <% if (scheduledTasks && scheduledTasks.length > 0) { %>
                            <span class="badge bg-dark"><%= scheduledTasks.length %> pending</span>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (scheduledTasks && scheduledTasks.length > 0) { %>
                            <div class="list-group list-group-flush mb-3 border rounded">
                                <% scheduledTasks.forEach(task => { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                        <div>
                                            <i class="fas <%= task.type.includes('push') ? 'fa-cloud-upload-alt text-primary' : 'fa-tags text-info' %> me-2"></i>
                                            <strong><%= task.type.replace(/-/g, ' ').toUpperCase() %></strong>
                                            <% if(task.target) { %><br><small class="text-muted"><%= task.target %></small><% } %>
                                        </div>
                                        <small class="text-muted"><%= new Date(task.scheduledTime).toLocaleString([], {month: 'short', day: 'numeric', hour: '2-digit', minute:'2-digit'}) %></small>
                                    </div>
                                <% })
                                %>
                            </div>
                        <% } %>
                        <a href="/repo/<%= repo.id %>/schedule" class="btn btn-outline-warning text-dark btn-sm w-100">Manage Schedule</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TAB 2: HISTORY -->
    <div class="tab-pane fade" id="history" role="tabpanel">
        <div class="card">
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <% log.all.forEach(commit => { 
                        const commitTags = commit.refs ? commit.refs.split(',').filter(r => r.trim().startsWith('tag: ')).map(r => r.trim().replace('tag: ', '')) : [];
                        const isUnpushed = unpushedHashes.has(commit.hash);
                    %>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <div style="flex: 1;">
                                    <h5 class="mb-1">
                                        <%= commit.message %>
                                        <% commitTags.forEach(tag => { %>
                                            <span class="badge bg-success ms-1"><i class="fas fa-tag me-1"></i><%= tag %></span>
                                        <% })
                                        %>
                                    </h5>
                                    <small class="text-muted"><%= commit.author_name %> on <%= commit.date.substring(0, 10) %></small>
                                </div>
                                <div class="text-end">
                                    <span class="font-monospace bg-light border px-2 rounded small"><%= commit.hash.substring(0, 7) %></span>
                                    <div class="mt-2">
                                        <% if (isUnpushed) { %>
                                            <button class="btn btn-outline-warning btn-sm me-1" onclick="openScheduleCommitModal('<%= commit.hash %>', '<%= commit.message.replace(/'/g, "\'") %>')">
                                                <i class="fas fa-clock"></i> Schedule
                                            </button>
                                        <% } else { %>
                                            <span class="badge bg-light text-muted border me-1"><i class="fas fa-check"></i> Synced</span>
                                        <% } %>
                                        <button class="btn btn-outline-secondary btn-sm" onclick="openTagModal('<%= commit.hash %>', '<%= commit.message.replace(/'/g, "\'") %>')">
                                            <i class="fas fa-plus"></i> Tag
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% })
                    %>
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="?limit=<%= (limit || 10) + 10 %>" class="btn btn-link">Load More Commits</a>
            </div>
        </div>
    </div>

    <!-- TAB 3: TAGS -->
    <div class="tab-pane fade" id="tags" role="tabpanel">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Existing Tags</h5>
                <div class="d-flex gap-2">
                    <form action="/repo/<%= repo.id %>" method="GET" class="d-flex">
                        <input type="hidden" name="tab" value="tags">
                        <div class="input-group input-group-sm">
                            <input type="text" name="tagSearch" class="form-control" placeholder="Search..." value="<%= tagSearch %>">
                            <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                    <button class="btn btn-success btn-sm" onclick="openTagModal('', 'HEAD')">New Tag</button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead><tr><th>Tag</th><th class="text-end">Actions</th></tr></thead>
                    <tbody>
                        <% pagedTags.forEach(tag => { 
                            const isRemote = remoteTags.includes(tag);
                        %>
                            <tr>
                                <td>
                                    <span class="badge bg-success fs-6"><%= tag %></span>
                                    <small class="text-muted ms-2"><i class="fas <%= isRemote ? 'fa-cloud' : 'fa-laptop' %>"></i> <%= isRemote ? 'Remote' : 'Local' %></small>
                                </td>
                                <td class="text-end">
                                    <% if (!isRemote) { %>
                                        <button class="btn btn-outline-warning btn-sm" onclick="openScheduleTagModal('<%= tag %>')">Schedule Push</button>
                                    <% } %>
                                    <form action="/repo/<%= repo.id %>/tag/<%= tag %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete?')"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% })
                        %>
                    </tbody>
                </table>
                <% if (totalTagPages > 1) { %>
                    <nav aria-label="Tags pagination" class="mt-4 border-top pt-3">
                        <ul class="pagination justify-content-center mb-0">
                            <!-- Previous Button -->
                            <li class="page-item <%= currentTagPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="?tagPage=<%= currentTagPage - 1 %>&tagSearch=<%= tagSearch %>&limit=<%= limit %>&tab=tags" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            
                            <!-- Page Numbers logic (Very Compact) -->
                            <% 
                            let startPage = Math.max(1, currentTagPage - 1);
                            let endPage = Math.min(totalTagPages, currentTagPage + 1);
                            
                            if (startPage > 1) { %>
                                <li class="page-item"><a class="page-link" href="?tagPage=1&tagSearch=<%= tagSearch %>&limit=<%= limit %>&tab=tags">1</a></li>
                                <% if(startPage > 2) { %><li class="page-item disabled"><span class="page-link">...</span></li><% } %>
                            <% }

                            for(let i = startPage; i <= endPage; i++) { %>
                                <li class="page-item <%= currentTagPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?tagPage=<%= i %>&tagSearch=<%= tagSearch %>&limit=<%= limit %>&tab=tags"><%= i %></a>
                                </li>
                            <% } 
                            
                            if (endPage < totalTagPages) { %>
                                <% if(endPage < totalTagPages - 1) { %><li class="page-item disabled"><span class="page-link">...</span></li><% } %>
                                <li class="page-item"><a class="page-link" href="?tagPage=<%= totalTagPages %>&tagSearch=<%= tagSearch %>&limit=<%= limit %>&tab=tags"><%= totalTagPages %></a></li>
                            <% } %>

                            <!-- Next Button -->
                            <li class="page-item <%= currentTagPage === totalTagPages ? 'disabled' : '' %>">
                                <a class="page-link" href="?tagPage=<%= currentTagPage + 1 %>&tagSearch=<%= tagSearch %>&limit=<%= limit %>&tab=tags" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="tagModal" tabindex="-1"><div class="modal-dialog"><div class="modal-content">
    <div class="modal-header"><h5>Create Tag</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
    <form action="/repo/<%= repo.id %>/tag" method="POST"><div class="modal-body">
        <input type="hidden" name="commitHash" id="modalCommitHash">
        <p>Target: <strong id="modalCommitDisplay"></strong></p>
        <div class="mb-3"><label class="form-label">Name</label><input type="text" name="tagName" class="form-control" required></div>
        <div class="mb-3"><label class="form-label">Message</label><textarea name="message" class="form-control"></textarea></div>
    </div><div class="modal-footer"><button type="submit" class="btn btn-primary">Create</button></div></form>
</div></div></div>

<div class="modal fade" id="scheduleTagModal" tabindex="-1"><div class="modal-dialog"><div class="modal-content">
    <div class="modal-header bg-warning"><h5>Schedule Tag Push</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
    <form id="scheduleTagForm" method="POST"><div class="modal-body">
        <p>Tag: <strong id="scheduleTagDisplay"></strong></p>
        <input type="datetime-local" name="datetime" class="form-control" required>
    </div><div class="modal-footer"><button type="submit" class="btn btn-warning">Schedule</button></div></form>
</div></div></div>

<div class="modal fade" id="scheduleCommitModal" tabindex="-1"><div class="modal-dialog"><div class="modal-content">
    <div class="modal-header bg-warning"><h5>Schedule Commit Push</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
    <form id="scheduleCommitForm" method="POST"><div class="modal-body">
        <p>Commit: <strong id="scheduleCommitDisplay"></strong></p>
        <input type="datetime-local" name="datetime" class="form-control" required>
    </div><div class="modal-footer"><button type="submit" class="btn btn-warning">Schedule</button></div></form>
</div></div></div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const urlParams = new URLSearchParams(window.location.search);
        const activeTab = urlParams.get('tab');
        if (activeTab) {
            const btn = document.querySelector(`#repoTabs button[data-bs-target="#${activeTab}"]`);
            if (btn) new bootstrap.Tab(btn).show();
        }
    });

    function openTagModal(hash, msg) {
        document.getElementById('modalCommitHash').value = hash;
        document.getElementById('modalCommitDisplay').innerText = hash ? hash.substring(0,7) : 'HEAD';
        new bootstrap.Modal(document.getElementById('tagModal')).show();
    }
    function openScheduleTagModal(tag) {
        document.getElementById('scheduleTagDisplay').innerText = tag;
        document.getElementById('scheduleTagForm').action = `/repo/<%= repo.id %>/tag/${tag}/schedule`;
        new bootstrap.Modal(document.getElementById('scheduleTagModal')).show();
    }
    function openScheduleCommitModal(hash, msg) {
        document.getElementById('scheduleCommitDisplay').innerText = hash.substring(0,7);
        document.getElementById('scheduleCommitForm').action = `/repo/<%= repo.id %>/commit/${hash}/schedule`;
        new bootstrap.Modal(document.getElementById('scheduleCommitModal')).show();
    }
</script>

<%- include('partials/footer') %>
